<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="phonenumberTextField">Phone Number</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter Phone Number" name="PhoneNumber" required>
                </div>
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control" id="emailTextField" placeholder="Enter Email" name="Email">
                </div>
                <div class="form-group">
                    <label for="notesTextArea">Notes</label>
                    <textarea type="text" class="form-control" id="notesTextArea"  placeholder="Notes" name="Notes"></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit" onclick="window.location.href='/contactlist'">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>